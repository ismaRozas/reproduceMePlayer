<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ABABAB"
    tools:context=".WelcomeScreen" >

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="55sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/centralImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textTitle"
        android:layout_centerVertical="true"
        android:background="#BBBBBB"
        android:src="@drawable/central_image" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/centralImage"
        android:layout_alignParentBottom="true"
        android:background="#ABABAB"
        android:src="@drawable/play_button" />

    <ImageButton
        android:id="@+id/smartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/centralImage"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/playButton"
        android:background="#ABABAB"
        android:src="@drawable/smartplay_button" />

</RelativeLayout>